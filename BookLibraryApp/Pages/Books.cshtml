@page
@model BookLibraryApp.Pages.BooksModel
@{
    ViewData["Title"] = "Библиотека книг";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Библиотека книг</h1>

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Фильтры</h5>
            <div class="row">
                <div class="col-md-6">
                    <a href="?genre=Роман" class="btn btn-outline-primary btn-sm">Романы</a>
                    <a href="?genre=Фэнтези" class="btn btn-outline-primary btn-sm">Фэнтези</a>
                    <a href="?genre=Антиутопия" class="btn btn-outline-primary btn-sm">Антиутопия</a>
                </div>
                <div class="col-md-6 text-end">
                    <a href="/Books" class="btn btn-outline-secondary btn-sm">Показать все</a>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2 class="h4 mb-0">Список книг</h2>
        </div>
        <div class="card-body">
            @if (Model.Books.Any())
            {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Название книги</th>
                                    <th>Автор</th>
                                    <th>Жанр</th>
                                    <th>Издательство</th>
                                    <th>Год</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var book in Model.Books)
                            {
                                        <tr>
                                            <td><strong>@book.Id</strong></td>
                                            <td class="fw-bold text-primary">@book.Title</td>
                                            <td>@book.Author</td>
                                            <td><span class="badge bg-secondary">@book.Genre</span></td>
                                            <td>@book.Publisher</td>
                                            <td><span class="badge bg-info text-dark">@book.Year</span></td>
                                        </tr>
                            }
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-3 text-muted">
                        <small>Всего книг: <strong>@Model.Books.Count</strong></small>
                    @if (!string.IsNullOrEmpty(Model.SearchGenre))
                    {
                                <small> | Жанр: <strong>@Model.SearchGenre</strong></small>
                    }
                    </div>
            }
            else
            {
                    <div class="alert alert-warning text-center">
                        <h4>Книги не найдены</h4>
                        <p class="mb-0">Попробуйте изменить параметры фильтра</p>
                    </div>
            }
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12 text-center">
            <a href="/" class="btn btn-outline-primary">← На главную</a>
        </div>
    </div>
</div>
